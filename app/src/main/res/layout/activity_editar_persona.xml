<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF6A4"
    tools:context=".EditarPersonaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDITAR PERSONA"
        android:textColor="#FF9800"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etNombreEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo nombre de la persona"
        android:inputType="textPersonName"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="10dp"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/etEdadEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cambia la edad de la persona"
        android:inputType="number"
        android:maxLength="3"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="20dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnGuardarCambios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:backgroundTint="#FF9800"
        android:textColor="@color/yellow"
        android:padding="12dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_lista_usuarios" />

</LinearLayout>